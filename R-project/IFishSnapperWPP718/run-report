#!/bin/bash
# File: run-report
# Purpose: Bash shell script for generating reports in I-Fish
# Date first version: May 2, 2016
# Author: Gede Wawan (gede.wawan@gmail.com)
# Requires: Installation of Latex and R with supporting packages (e.g. knitr in R)
PATH=/usr/local/sbin:/usr/local/bin:/sbin:/bin:/usr/sbin:/usr/bin
export DISPLAY=:0.0

### Prepare a variable for storing part of the filename
now=$(date +"%Y_%m_%d")

### Directory where the reports are
current=$"/root/R-project/IFishSnapperWPP718/Reports/Current/"

### Directory with the archived reports
archive=$"/root/R-project/IFishSnapperWPP718/Reports/Archive/"

### Directory with the R scripts
working=$"/root/R-project/IFishSnapperWPP718/Scripts/"

### Move current pdf reports to archive, adding dates to the filename
cd $current
for file in *.[Pp][Dd][Ff]; do
    mv "$file" "$archive""$now"-"$file"
done

### Remove any old latex files
cd $working
rm *.tex *.toc *.aux *.log

### Run R script
"$working"data.r

### Run pdflatex a couple of times (to get references etc right)
pdflatex -output-directory=/root/R-project/IFishSnapperWPP718/Reports/Current/  "$working"IFishSnapperWPP718.tex  

### Copy .pdf file to website
rm -f /root/app/ifish/pub/IFishSnapperWPP718.pdf
rm -f /root/app/ifish/pub/IFishSnapperWPP718-print.pdf
cp /root/R-project/IFishSnapperWPP718/Reports/Current/IFishSnapperWPP718.pdf /root/app/ifish/pub/IFishSnapperWPP718-print.pdf
gs -dNOPAUSE -dBATCH -sDEVICE=pdfwrite -dCompatibilityLevel=1.4 -dPDFSETTINGS=/ebook -sOutputFile=/root/app/ifish/pub/IFishSnapperWPP718.pdf /root/app/ifish/pub/IFishSnapperWPP718-print.pdf
echo "done!"


